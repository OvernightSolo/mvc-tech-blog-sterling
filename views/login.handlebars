<section class="login-page">
  <div class="form-heading">
    <h1>Log In</h1>
  </div>
  <div class="form-section">
    <form class="login-form">
      <div>
        <label for="username-login">Username</label>
        <input type="text" class="entry-field" id="username-login" />
      </div>
      <div>
        <label for="password-login"></label>
        <input type="password" class="entry-field" id="password-login" />
      </div>
      <div>
        <button class="login-signup-btn" type="submit"></button>
      </div>
    </form>
  </div>
  <a href="/signup" class="sign-in-link">Sign up instead</a>
</section>

<script src="/js/login.js"></script>